= form_tag({}, {class: 'form width-400 centered'}) do
  %fieldset
    %legend= t(:please_login)
    .form-group
      = label_tag :email, t(:email)
      = text_field_tag :email, params[:email], placeholder: t(:email), class: 'form-control'
    .form-group
      = label_tag :password, t(:password)
      = password_field_tag :password, params[:password], placeholder: t(:password), class: 'form-control'
    = submit_tag t(:login) , class: 'btn btn-default'
