- if flash[:notice]
  .alert.alert-info.fade.in
    = flash[:notice]
    .close{ data: {dismiss: "alert" }} &times;
- if flash[:error]
  .alert.alert-dang.fade.in
    = flash[:error]
    .close{ data: {dismiss: "alert" }} &times;
- if flash[:success]
  .alert.alert-succ.fade.in
    = flash[:success]
    .close{ data: {dismiss: "alert" }} &times;
- if flash[:warning]
  .alert.alert-warn.fade.in
    = flash[:warning]
    .close{ data: {dismiss: "alert" }} &times;