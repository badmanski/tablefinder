%nav.navbar.navbar-inverse.navbar-static-top
  .navbar-header
    %button.navbar-toggle{'data-toggle' => 'collapse', 'data-target' => '.navbar-collapse'}
      %span.sr-only= t(:toggle_navigation)
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to 'Tablefinder', root_path, class: 'navbar-brand'

  .collapse.navbar-collapse
    %ul.nav.navbar-nav
      %li#nav-places= link_to t(:place, count: 2), places_path
      - if current_user
        %li#nav-users= link_to t(:user, count: 2), users_path
        %li#nav-dashboard= link_to t(:dashboard), dashboard_path
    - if current_user
      %ul.nav.navbar-nav.navbar-right
        %li= link_to t(:logout), logout_path, method: :delete
    - else
      %ul.nav.navbar-nav.navbar-right
        %li= link_to t(:login), login_path